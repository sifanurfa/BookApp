<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".admin.AdminTambahData">

    <ImageView
        android:id="@+id/ic_back_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/baseline_arrow_back_ios_24"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/ic_back_to_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ic_back_to_home"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/dark_blue"
        android:text="Tambah Buku"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ic_back_to_home"
        app:layout_constraintBottom_toTopOf="@id/btn_tambah_data"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Judul"/>
            <EditText
                android:id="@+id/edt_judul"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:hint=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Penulis"/>
            <EditText
                android:id="@+id/edt_penulis"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:hint=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Tanggal Terbit"/>
            <EditText
                android:id="@+id/edt_tgl_terbit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:focusable="false"
                android:hint=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Penerbit"/>
            <EditText
                android:id="@+id/edt_penerbit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:hint=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Jumlah Halaman"/>
            <EditText
                android:id="@+id/edt_jumlah_halaman"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:inputType="number"
                android:hint=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Harga"/>
            <EditText
                android:id="@+id/edt_harga"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:inputType="number"
                android:hint=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Sinopsis"/>
            <EditText
                android:id="@+id/edt_sinopsis"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/text_area"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:lines="5"
                android:maxLines="10"
                android:gravity="top|start"
                android:padding="15dp"
                android:hint=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Gambar"/>
            <EditText
                android:id="@+id/edt_gambar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:hint=""/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_tambah_data"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="TAMBAH DATA"/>

</androidx.constraintlayout.widget.ConstraintLayout>