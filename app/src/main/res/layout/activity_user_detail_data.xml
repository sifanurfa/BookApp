<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".user.UserDetailData">

    <ImageView
        android:id="@+id/ic_back_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/baseline_arrow_back_ios_24"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/ic_back_to_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ic_back_to_home"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/dark_blue"
        android:text="Detail Buku"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/ic_back_to_home"
        app:layout_constraintBottom_toTopOf="@id/btn_keranjang">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <LinearLayout
                android:id="@+id/img_buku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <ImageView
                    android:id="@+id/img_book"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@drawable/gambar"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_buku"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:background="@drawable/round_icon"
                android:src="@drawable/baseline_article_24"/>
            <TextView
                android:id="@+id/txt_judul"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/img_buku"
                app:layout_constraintBottom_toBottomOf="@id/ic_judul"
                app:layout_constraintStart_toEndOf="@id/ic_judul"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Judul Buku"/>

            <ImageView
                android:id="@+id/ic_penulis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ic_judul"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/round_icon"
                android:src="@drawable/baseline_create_24"/>
            <TextView
                android:id="@+id/txt_penulis"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/ic_penulis"
                app:layout_constraintBottom_toBottomOf="@id/ic_penulis"
                app:layout_constraintStart_toEndOf="@id/ic_penulis"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Penulis"/>

            <ImageView
                android:id="@+id/ic_penerbit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ic_penulis"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/round_icon"
                android:src="@drawable/baseline_business_24"/>
            <TextView
                android:id="@+id/txt_penerbit"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/ic_penerbit"
                app:layout_constraintBottom_toBottomOf="@id/ic_penerbit"
                app:layout_constraintStart_toEndOf="@id/ic_penerbit"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Penerbit"/>

            <ImageView
                android:id="@+id/ic_tgl_terbit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ic_penerbit"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/round_icon"
                android:src="@drawable/baseline_calendar_month_24"/>
            <TextView
                android:id="@+id/txt_tgl_terbit"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/ic_tgl_terbit"
                app:layout_constraintBottom_toBottomOf="@id/ic_tgl_terbit"
                app:layout_constraintStart_toEndOf="@id/ic_tgl_terbit"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Tanggal Terbit"/>

            <ImageView
                android:id="@+id/ic_jumlah_halaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ic_tgl_terbit"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/round_icon"
                android:src="@drawable/baseline_menu_book_24"/>
            <TextView
                android:id="@+id/txt_jml_halaman"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/ic_jumlah_halaman"
                app:layout_constraintBottom_toBottomOf="@id/ic_jumlah_halaman"
                app:layout_constraintStart_toEndOf="@id/ic_jumlah_halaman"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Jumlah Halaman"/>

            <ImageView
                android:id="@+id/ic_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ic_jumlah_halaman"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/round_icon"
                android:src="@drawable/baseline_attach_money_24"/>
            <TextView
                android:id="@+id/txt_harga"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/ic_harga"
                app:layout_constraintBottom_toBottomOf="@id/ic_harga"
                app:layout_constraintStart_toEndOf="@id/ic_harga"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Harga"/>

            <TextView
                android:id="@+id/text_sinopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ic_harga"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/dark_blue"
                android:text="Sinopsis:"/>
            <TextView
                android:id="@+id/txt_sinopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_sinopsis"
                android:text="sinopLorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum. Curabitur pretium tincidunt lacus. Nulla gravida orci a odio. Nullam varius, turpis et commodo pharetra, est eros bibendum elit.so"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_keranjang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button"
        android:textStyle="bold"
        android:text="Tambah ke Keranjang"/>

</androidx.constraintlayout.widget.ConstraintLayout>